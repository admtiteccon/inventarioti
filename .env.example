# ==============================================
# IT INVENTORY SYSTEM - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and customize the values

# Flask Configuration
# -------------------
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# Database Configuration
# ----------------------
# Development (SQLite)
DEV_DATABASE_URL=sqlite:///dev_inventory.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/inventory_db

# Mail Configuration
# ------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Application Settings
# --------------------
APP_NAME=IT Inventory System
APP_ADMIN_EMAIL=admin@yourdomain.com

# Footer Customization
# --------------------
# Customize the footer displayed on all pages
FOOTER_COMPANY_NAME=IT Inventory Management System
FOOTER_YEAR=2024
FOOTER_VERSION=1.0.0
FOOTER_DOCS_URL=https://github.com/yourusername/it-inventory
FOOTER_SUPPORT_EMAIL=support@itinventory.com

# Session Configuration
# ---------------------
SESSION_LIFETIME_HOURS=24

# Pagination
# ----------
ITEMS_PER_PAGE=20

# License Alerts
# --------------
LICENSE_ALERT_THRESHOLD_DAYS=30

# File Upload
# -----------
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Scheduler
# ---------
SCHEDULER_TIMEZONE=America/Sao_Paulo
